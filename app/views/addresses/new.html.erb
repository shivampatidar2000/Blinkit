<h2>Add New Address</h2>

<%= form_with model: @address, local: true do |f| %>
  <% if @address.errors.any? %>
    <div class="errors">
      <h4><%= pluralize(@address.errors.count, "error") %> prevented saving:</h4>
      <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :street, "Street / Address" %><br />
    <%= f.text_field :street, required: true %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, required: true %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :pincode %><br />
    <%= f.text_field :pincode, required: true %>
  </div>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country, value: "India" %>
  </div>

  <div class="actions">
    <%= f.submit "Save Address" %>
  </div>
<% end %>

<%= link_to "Back", addresses_path %>
